{
  "manifest_version": 3,
  "name": "Cat Claws",
  "version": "1.0.0",
  "description": "Snap it. Paw it. Screenshots with a soft paw.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Cat Claws - Snap it. Paw it.",
    "default_icon": "assets/paw.svg"
  },
  "icons": {
    "16": "assets/paw.svg",
    "48": "assets/paw.svg",
    "128": "assets/paw.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "editor.html", "cat-mood.js", "state-manager.js", "paw-themes.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
